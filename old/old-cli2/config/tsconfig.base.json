{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "../build",
    "rootDir": "../src",
    "declaration": false,
    "sourceMap": false,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": []
}
